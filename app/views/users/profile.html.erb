<%= render "home/partial" %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">Profile Settings</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: profile_path, method: :patch, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :username, class: "form-label" %>
              <%= f.text_field :username, class: "form-control", value: @user.username %>
              <% if @user.errors[:username].any? %>
                <div class="text-danger">
                  <% @user.errors[:username].each do |message| %>
                    <small><%= message %></small>
                  <% end %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control", value: @user.email %>
              <% if @user.errors[:email].any? %>
                <div class="text-danger">
                  <% @user.errors[:email].each do |message| %>
                    <small><%= message %></small>
                  <% end %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.submit "Update Profile", class: "btn btn-primary" %>
              <%= link_to "Cancel", posts_path, class: "btn btn-secondary ms-2" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="mb-3">
            <h5>Change Password</h5>
            <p class="text-muted">Use the link below to change your password.</p>
            <%= link_to "Change Password", new_user_password_path, class: "btn btn-outline-warning" %>
          </div>

          <hr class="my-4">

          <div class="mb-3">
            <h5>Account Statistics</h5>
            <div class="row">
              <div class="col-md-4">
                <div class="card bg-light">
                  <div class="card-body text-center">
                    <h4 class="card-title"><%= @user.posts.count %></h4>
                    <p class="card-text">Posts</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card bg-light">
                  <div class="card-body text-center">
                    <h4 class="card-title"><%= @user.comments.count %></h4>
                    <p class="card-text">Comments</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card bg-light">
                  <div class="card-body text-center">
                    <h4 class="card-title"><%= @user.likes.count %></h4>
                    <p class="card-text">Likes Given</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
