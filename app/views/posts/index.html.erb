<%= render "home/partial" %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <h2 class="mb-0">All Posts</h2>
            <div class="d-flex align-items-center gap-2 flex-wrap">
              <!-- Search Form -->
              <%= form_with url: posts_path, method: :get, local: true, class: "d-flex gap-2" do |f| %>
                <%= f.text_field :q, value: params[:q], placeholder: "Search posts...", class: "form-control form-control-sm", style: "width: 200px;" %>
                <%= f.hidden_field :category, value: params[:category] %>
                <%= f.submit "Search", class: "btn btn-outline-success btn-sm" %>
              <% end %>
              
              <!-- Category Filter Form -->
              <%= form_with url: posts_path, method: :get, local: true, class: "d-flex gap-2" do |f| %>
                <%= f.select :category, options_for_select([["All Categories", ""]] + Post::CATEGORIES.map { |cat| [cat, cat] }, params[:category]), {}, { class: "form-select form-select-sm" } %>
                <%= f.hidden_field :q, value: params[:q] %>
                <%= f.submit "Filter", class: "btn btn-outline-primary btn-sm" %>
              <% end %>
              
              <!-- Clear All Button -->
              <% if params[:category].present? || params[:q].present? %>
                <%= link_to "Clear All", posts_path, class: "btn btn-outline-secondary btn-sm" %>
              <% end %>
              
              <% if user_signed_in? %>
                <%= link_to "New Post", new_post_path, class: "btn btn-primary btn-sm" %>
              <% end %>
            </div>
          </div>
          <% if params[:category].present? || params[:q].present? %>
            <div class="mt-2">
              <small class="text-muted">
                <% if params[:category].present? && params[:q].present? %>
                  <i class="bi bi-funnel"></i> Showing posts in: <strong><%= params[:category] %></strong> • 
                  <i class="bi bi-search"></i> Search: <strong>"<%= params[:q] %>"</strong>
                <% elsif params[:category].present? %>
                  <i class="bi bi-funnel"></i> Showing posts in: <strong><%= params[:category] %></strong>
                <% elsif params[:q].present? %>
                  <i class="bi bi-search"></i> Search results for: <strong>"<%= params[:q] %>"</strong>
                <% end %>
              </small>
            </div>
          <% end %>
        </div>
        <div class="card-body">
          <% if @posts.any? %>
            <div class="row">
              <% @posts.each do |post| %>
                <div class="col-12 mb-4">
                  <div class="card border-0 shadow-sm">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                          <h5 class="card-title mb-1">
                            <%= link_to post.title, post_path(post), class: "text-decoration-none text-dark" %>
                          </h5>
                          <div class="d-flex align-items-center gap-2 mb-2">
                            <small class="text-muted">
                              <i class="bi bi-person"></i> <%= post.user.username %> • 
                              <i class="bi bi-clock"></i> <%= post.created_at.strftime("%m/%d/%y %I:%M %p") %>
                            </small>
                            <% if post.category.present? %>
                              <span class="badge bg-primary"><%= post.category %></span>
                            <% end %>
                          </div>
                        </div>
                        <% if post.user == current_user %>
                          <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                              <i class="bi bi-three-dots"></i>
                            </button>
                            <ul class="dropdown-menu">
                              <li><%= link_to "Edit", edit_post_path(post), class: "dropdown-item" %></li>
                              <li><%= link_to "Delete", post_path(post), method: :delete, 
                                    data: { confirm: "Are you sure?" }, class: "dropdown-item text-danger" %></li>
                            </ul>
                          </div>
                        <% end %>
                      </div>
                      
                      <p class="card-text text-muted">
                        <%= truncate(post.body, length: 150) %>
                      </p>
                      
                      <div data-controller="comments-toggle" data-comments-toggle-src-value="<%= comments_post_path(post) %>" class="d-flex flex-column align-items-start gap-2">
                        <div class="d-flex align-items-center gap-3">
                          <button data-action="click->comments-toggle#toggle" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-chat"></i> 
                            <span id="comments_count_<%= post.id %>"><%= post.comments.count %></span>
                          </button>
                          <%= render "posts/likes", post: post %>
                        </div>
                        <div style="width:100%">
                          <turbo-frame id="comments_frame_<%= post.id %>" 
                             data-comments-toggle-target="frame" 
                             style="display:none; width:100%;"></turbo-frame>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-5">
              <i class="bi bi-journal-text fs-1 text-muted"></i>
              <h4 class="mt-3">No Posts Found</h4>
              <p class="text-muted">
                <% if params[:category].present? && params[:q].present? %>
                  No posts found in the "<%= params[:category] %>" category matching "<%= params[:q] %>".
                <% elsif params[:category].present? %>
                  No posts found in the "<%= params[:category] %>" category.
                <% elsif params[:q].present? %>
                  No posts found matching "<%= params[:q] %>".
                <% else %>
                  Be the first to share your thoughts with the community!
                <% end %>
              </p>
              <% if user_signed_in? %>
                <%= link_to "Create First Post", new_post_path, class: "btn btn-primary" %>
              <% else %>
                <%= link_to "Sign In to Create Post", new_user_session_path, class: "btn btn-outline-primary" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

